@model BpMeasurement

@{
    ViewData["Title"] = "Delete Measurement";
}

<h2>Delete Measurement</h2>

<h3>Are you sure you want to delete this measurement?</h3>

<div>
    <h4>Measurement</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Systolic
        </dt>
        <dd class="col-sm-10">
            @Model.Systolic
        </dd>

        <dt class="col-sm-2">
            Diastolic
        </dt>
        <dd class="col-sm-10">
            @Model.Diastolic
        </dd>

        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.MeasurementDate.ToString("yyyy-MM-dd")
        </dd>

        <dt class="col-sm-2">
            Position
        </dt>
        <dd class="col-sm-10">
            @Model.Position.Name
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
