@model BpMeasurement

@{
    ViewData["Title"] = "Edit Measurement";
}

<h2>Edit BP Measurement</h2>

<form asp-controller="BpMeasurement" asp-action="Edit" method="post" enctype="application/x-www-form-urlencoded">
    <div class="form-group">
        <div class="text-danger" asp-validation-summary="All"></div>
        <label asp-for="Systolic">Systolic (mm Hg)</label>
        <input asp-for="Systolic" class="form-control" />
        
    </div>

    <div class="form-group">
        <label asp-for="Diastolic">Diastolic (mm Hg)</label>
        <input asp-for="Diastolic" class="form-control" />
        
    </div>

    <div class="form-group">
        <label asp-for="PositionID">Position</label>
        <select asp-for="PositionID" class="form-control" asp-items="ViewBag.Positions">
            <option  value="">Select a measurement position..</option>
        </select>
       
    </div>

    <div class="form-group">
        <label asp-for="MeasurementDate">Date of measurement</label>
        <input asp-for="MeasurementDate" class="form-control" type="date" />
       
    </div>


    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
